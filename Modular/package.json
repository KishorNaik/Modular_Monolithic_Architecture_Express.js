		"express-jwt": "^8.4.1",
		"express-rate-limit": "^7.4.0",
		"guid-typescript": "^1.0.9",
		"helmet": "^7.1.0",
		"hpp": "^0.2.3",
		"http-status-codes": "^2.3.0",
		"jsonwebtoken": "^9.0.2",
		"linq": "3.2.4",
		"mediatr-ts": "^1.2.1",
		"morgan": "^1.10.0",
		"neverthrow": "^7.0.1",
